<!-- MODALS -->
<!-- todo use a modal template rather than 4 modals -->
<div id="move-modal" class="modal">
    <div class="modal-content">
        <h4>Move Command</h4>
        <p>Add a new MOVE command</p>
        <label>Move By
            <input name="data" placeholder="e.g 103"/>
        </label>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Ok</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat">Close</a>
    </div>
</div>
<div id="rotate-modal" class="modal">
    <div class="modal-content">
        <h4>Rotate Command</h4>
        <p>Add a new ROTATE command</p>
        <label>Rotate By
            <input name="data" placeholder="e.g 360"/>
        </label>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Ok</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat">Close</a>
    </div>
</div>
<div id="loop-modal" class="modal">
    <div class="modal-content">
        <h4>Loop Command</h4>
        <p>Add a new LOOP command</p>
        <label>Loop 'x' times
            <input name="data" placeholder="e.g 3"/>
        </label>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Ok</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat">Close</a>
    </div>
</div>
<div id="jump-modal" class="modal">
    <div class="modal-content">
        <h4>Jump Command</h4>
        <p>Add a new JUMP command</p>
        <label>Jump by
            <input name="data" placeholder="e.g 17"/>
        </label>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Ok</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat">Close</a>
    </div>
</div>
